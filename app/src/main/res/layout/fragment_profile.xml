<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Preferences.ProfileFragment"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="HardcodedText">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="250dp"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/gallery_iv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:src="@drawable/profile_photo"

        />

</FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/username_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                style="@style/text_style"
                />
            <EditText
                android:id="@+id/text_input1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginEnd="20dp"
                android:hint="введите текст"
                android:textColorHint="#707070"
                android:gravity="right"
                android:maxLines="1"
                android:inputType="text"

                />






            <View
                android:id="@+id/line1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/username_tv"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#605E5E"
                android:layout_margin="20dp"

                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/line1"
                android:textSize="20sp"
                android:layout_marginEnd="20dp"
                android:hint="введите текст"
                android:textColorHint="#707070"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:maxLines="1"
                    android:inputType="text"
                    android:gravity="right"
                    />


            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/email_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                style="@style/text_style"
                />
            <View
                android:id="@+id/line2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/email_tv"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#605E5E"
                android:layout_margin="20dp"


                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_text3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/line2"
                android:textSize="20sp"
                android:layout_marginEnd="20dp"
                android:hint="введите текст"
                android:textColorHint="#707070"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:inputType="number"
                    android:gravity="right"

                    />


            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/phone_tv"
                app:layout_constraintTop_toBottomOf="@+id/line2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style"
                android:text="Phone"
                />
            <View
                android:id="@+id/line3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_tv"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#605E5E"
                android:layout_margin="20dp"


                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/line3"
                android:textSize="20sp"
                android:layout_marginEnd="20dp"
                android:hint="введите текст"
                android:textColorHint="#707070"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:inputType="date"
                    android:gravity="right"

                    />


            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/date_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date of birth"
                style="@style/text_style"
                />
            <View
                android:id="@+id/line4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date_tv"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#605E5E"
               android:layout_margin="20dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/line4"
                android:textSize="20sp"
                android:layout_marginEnd="20dp"
                android:hint="введите текст"
                android:textColorHint="#707070"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:inputType="text"
                    android:gravity="right"

                    />


            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/adress_tv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_style"
                android:text="Address"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        />





</LinearLayout>